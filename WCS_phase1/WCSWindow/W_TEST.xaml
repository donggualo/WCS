            </Grid>
        </TabItem>

        <TabItem Header="设备设定" Background="LightSteelBlue">
            <Grid Background="LightSteelBlue">
                <Grid.RowDefinitions>
                    <RowDefinition Height="415*"/>
                    <RowDefinition Height="76*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Button Content="刷新" HorizontalAlignment="Left" Height="50" Margin="20,20,0,0" VerticalAlignment="Top" Width="60" Click="RefreshDev_Click"/>
                <Label Content="设备类型：" Margin="100,10,0,378" HorizontalAlignment="Left" Width="77"/>
                <ComboBox Name="CBdev" HorizontalAlignment="Left" Height="33" Margin="100,37,0,0" VerticalAlignment="Top" Width="127"/>
                <Label Content="设备区域：" Height="27" Margin="240,10,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="77"/>
                <ComboBox Name="CBarea" HorizontalAlignment="Left" Height="33" Margin="240,37,0,0" VerticalAlignment="Top" Width="109"/>

                <DataGrid Name="DGdevice" Margin="20,80,21,3" AutoGeneratingColumn="DataGrid_TimeFormat" CanUserAddRows="False" IsReadOnly="True" MouseDoubleClick="DGdevice_DoubleClick">
                    <DataGrid.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="删除此数据" Click="DeleteDev_Click"/>
                            <MenuItem Header="导出 Excel" Click="SaveToExcel_Click"/>
                        </ContextMenu>
                    </DataGrid.ContextMenu>
                </DataGrid>
                <Label Content="设备号：" Height="27" Margin="0,8,801,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="60" Grid.Row="1"/>
                <TextBox Name="TBdevice" HorizontalAlignment="Right" Height="27" Margin="0,8,685,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="111" Grid.Row="1"/>

                <Label Content="IP：" Height="27" Margin="0,7,641,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="32" Grid.Row="1"/>
                <TextBox Name="TBip" HorizontalAlignment="Right" Height="27" Margin="0,7,481,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="155" Grid.Row="1"/>

                <Label Content="PORT：" Height="27" Margin="0,8,376,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="60" Grid.Row="1"/>
                <TextBox Name="TBport" HorizontalAlignment="Right" Height="27" Margin="0,7,260,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="111" Grid.Row="1"/>

                <Label Content="所属区域：" Height="27" Margin="0,8,161,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="77" Grid.Row="1"/>
                <TextBox Name="TBarea" HorizontalAlignment="Right" Height="27" Margin="0,7,45,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="111" Grid.Row="1"/>

                <Label Content="备注：" Height="27" Margin="0,41,801,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="45" Grid.Row="1"/>
                <TextBox Name="TBmark" HorizontalAlignment="Right" Height="27" Margin="0,41,481,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="315" Grid.Row="1"/>

                <Label Content="所属类型：" Height="27" Margin="0,41,376,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="77" Grid.Row="1"/>
                <ComboBox Name="CBtype" HorizontalAlignment="Right" Height="27" Margin="0,41,260,0" VerticalAlignment="Top" Width="111" Grid.Row="1"/>

                <Button Name="BtnADD" Content="添加" Height="28" Margin="0,41,152,0" VerticalAlignment="Top" Click="AddDev_Click" Grid.Row="1" HorizontalAlignment="Right" Width="81"/>
                <Button Name="BtnUPD" Content="修改" Height="28" Margin="0,41,45,0" VerticalAlignment="Top" Click="UpdateDev_Click" Grid.Row="1" HorizontalAlignment="Right" Width="81"/>
            </Grid>
        </TabItem>

    </TabControl>
</Window>
