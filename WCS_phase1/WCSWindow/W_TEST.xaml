                <Label Content="当前位置：" Margin="32,0,0,0" Grid.Column="1" Grid.Row="8"/>
                <Label Name="LAlocC" Content="— — — —" FontWeight="Bold" Grid.Column="2" Grid.Row="8"/>
                <Label Content="目的位置：" Margin="31,0,0,0" Grid.Column="1" Grid.Row="9"/>
                <Label Name="LAlocT" Content="— — — —" FontWeight="Bold"  Grid.Column="2" Grid.Row="9"/>
                <Label Content="货物状态：" Margin="32,0,0,0" Grid.Column="1" Grid.Row="10"/>
                <Label Name="LAgoodsS" Content="— — — —" FontWeight="Bold" Grid.Column="2" Grid.Row="10"/>
