                </Grid.ColumnDefinitions>
                <ComboBox Name="CBdevtype" Margin="0,3,0,42" Grid.Column="1" Grid.Row="1"/>
                <TextBox Name="TBnum" Margin="0,42,0,3" Grid.Column="1" Grid.Row="1"/>
                <Button Content="获取" Margin="10,10,10,10" Click="GetDevData_Click" Grid.Column="2" Grid.Row="1"/>

