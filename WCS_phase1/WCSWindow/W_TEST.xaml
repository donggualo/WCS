                <Label Content="运动状态：" Margin="32,0,0,0" Grid.Column="1" Grid.Row="3"/>
                <Label Name="LAactS" Content="— — — —" FontWeight="Bold" Grid.Column="2" Grid.Row="3"/>
                <Label Content="设备状态：" Margin="32,0,0,0" Grid.Column="1" Grid.Row="4"/>
                <Label Name="LAdevS" Content="— — — —" FontWeight="Bold"  Grid.Column="2" Grid.Row="4"/>
                <Label Content="命令状态：" Margin="32,0,0,0" Grid.Column="1" Grid.Row="5"/>
                <Label Name="LAcmdS" Content="— — — —" FontWeight="Bold" Grid.Column="2" Grid.Row="5"/>
                <Label Content="当前任务：" Margin="32,0,0,0" Grid.Column="1" Grid.Row="6"/>
